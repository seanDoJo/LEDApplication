<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Fragments.ViewFileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffbdbdbd">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/file_name"
            android:textSize="20sp"
            android:textColor="#ffaa052a"
            android:typeface="sans"
            android:gravity="center_vertical"
            android:layout_weight="1" />
        <CheckBox
            android:id="@+id/view_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Show line numbers"
            android:textColor="#ffaa052a"
            android:textSize="15sp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trash"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffbdbdbd">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:id="@+id/line_numbers"
                    android:textColor="#ffaa052a"
                    android:background="#ffbdbdbd"
                    android:padding="3dp"
                    android:visibility="gone"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#fffefefe">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="1dp"
                    android:id="@+id/fileText"
                    android:text=""
                    android:textColor="#ff000000"
                    android:background="#fffefefe"
                    android:paddingLeft="3dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
