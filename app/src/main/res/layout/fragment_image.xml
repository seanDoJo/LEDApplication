<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cisco.prototype.ledsignaldetection.ImageFragment"
    android:orientation="horizontal">

    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content"><TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_text"/></TableRow>

    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content"><ListView android:layout_width="match_parent" android:layout_height="370dp"
        android:id="@+id/image_list"/></TableRow>

    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content"><Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/image_button"
        android:onClick=""
        android:text="Download"/></TableRow>



</TableLayout>
