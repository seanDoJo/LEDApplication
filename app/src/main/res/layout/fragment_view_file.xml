<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cisco.prototype.ledsignaldetection.ViewFileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/file_name"
            android:textSize="20sp"
            android:textColor="#ffaa052a"
            android:typeface="sans"
            android:background="#ffbdbdbd"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Show line numbers"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:id="@+id/line_numbers"
                android:textColor="#ffaa052a"
                android:background="#ffbdbdbd"
                android:padding="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:id="@+id/fileText"
                android:text=""
                android:textColor="#ff000000"
                android:background="#fffefefe"
                android:paddingLeft="3dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
