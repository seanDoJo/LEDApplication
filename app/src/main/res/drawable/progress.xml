<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="#FF9AC2FF"
                android:centerY="0.5"
                android:endColor="#FF9AC2FF"
                android:startColor="#FF9AC2FF" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="0"
                    android:endColor="#C7FF0532"
                    android:startColor="#ffaa052a" />
            </shape>
        </clip>
    </item>
</layer-list>